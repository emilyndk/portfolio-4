---
const { header, text, url = "#", bgImg = "" } = Astro.props;
import Button from "./Button.astro";
---

<article
  class="relative bg-cover bg-center h-[500px] w-[300px] overflow-hidden group"
  style={`background-image: url(${bgImg});`}
>
  <div class="bg-lavender-600 bg-opacity-90 p-padding-ml flex flex-col justify-between h-full p-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
    
    <!-- Container for header and text -->
    <div class="flex flex-col gap-padding-xs">
      <h1 class="text-center text-isabelline underline font-headline text-h1-card-d">
        {header.split('\n').map((line) => (
          <>
            {line} <br />
          </>
        ))}
      </h1>

      <!-- Make the text scrollable if it overflows -->
      <p class="text-isabelline font-body text-body-m-s overflow-y-auto max-h-[280px]">
        {text}
      </p>
    </div>

    <!-- Button container -->
    <div class="flex flex-col items-center">
      <Button size="card" type="primary" class="mx-auto">
        <a href={url}>BESØG</a>
      </Button>
    </div>
  </div>
</article>

<style>
  /* Fjern standard scrollbars */
p::-webkit-scrollbar {
  width: 8px; /* Smal scrollbar */
}

p::-webkit-scrollbar-track {
  background: transparent; /* Transparent baggrund på track */
}

p::-webkit-scrollbar-thumb {
  background-color: #C2E668; /* Let grå farve til thumb */
  border-radius: 10px; /* Rundere hjørner */
}

p::-webkit-scrollbar-thumb:hover {
  background-color: #d0ef82; /* Mørkere farve ved hover */
}

</style>
